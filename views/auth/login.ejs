<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%if(error){%>
          <div class="user-message user-message--error" >  <%=error%></div>
            <%}%>
           
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                class="<%=validationCss.find(e=>e.param==='email')?'invalid':''%>"
                type="email"
                 name="email" 
                 id="email"
                 value="<%=oldInput.email%>"
                 >
                 
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                class="<%=validationCss.find(e=>e.param==='password')?'invalid':''%>"
                type="password" 
                name="password" 
                id="password"
                value="<%=oldInput.password%>">
            </div>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" >
            <button class="btn" type="submit">Login</button>

            <div class="form-control" > <a href="/reset" class="centered" >Reset Password</a>  </div>  
        </form>

    </main>
<%- include('../includes/end.ejs') %>         